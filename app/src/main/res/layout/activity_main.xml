<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.adityawalvekar.hub.MainActivity"
    android:background="#303030">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/popMovies"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:background="#446cb3"
        android:onClick="popularMoviesToast"
        android:textColor="#e4f1fe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:id="@+id/stockHawk"
        android:layout_marginTop="35dp"
        android:width="300dp"
        android:background="#446cb3"
        android:textColor="#e4f1fe"
        android:layout_below="@+id/popMovies"
        android:onClick="stockHawkToast"
        android:layout_alignStart="@+id/popMovies" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/buildItBigger"
        android:layout_marginTop="35dp"
        android:width="300dp"
        android:background="#446cb3"
        android:textColor="#e4f1fe"
        android:layout_below="@+id/stockHawk"
        android:onClick="buildItBiggerToast"
        android:layout_alignStart="@+id/stockHawk" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:id="@+id/makeYourAppMaterial"
        android:layout_marginTop="35dp"
        android:width="300dp"
        android:background="#446cb3"
        android:textColor="#e4f1fe"
        android:onClick="makeYourAppMaterialToast"
        android:layout_below="@+id/buildItBigger"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:id="@+id/goUbiquitous"
        android:layout_marginTop="35dp"
        android:width="300dp"
        android:background="#446cb3"
        android:textColor="#e4f1fe"
        android:onClick="goUbiquitousToast"
        android:layout_below="@+id/makeYourAppMaterial"
        android:layout_alignStart="@+id/makeYourAppMaterial" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone Project"
        android:id="@+id/capstoneProject"
        android:layout_marginTop="35dp"
        android:width="300dp"
        android:background="#d24d57"
        android:textColor="#e4f1fe"
        android:onClick="capstoneProjectToast"
        android:layout_below="@+id/goUbiquitous"
        android:layout_alignStart="@+id/goUbiquitous" />
</RelativeLayout>
